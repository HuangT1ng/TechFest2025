{
  "manifest_version": 3,
  "name": "SafeScroll",
  "description": "",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.facebook.com/*"],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["images/*"],
    "matches": ["*://*.facebook.com/*"]
  }],
  "background": {
    "service_worker": "background.js"
  }
} 